{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
			//Toda vez que inicar a aplicação, roda o debug
            //"request": "launch",

			//Dessa forma com a aplicação rodando, podemos rodar qdo necessário (play)
